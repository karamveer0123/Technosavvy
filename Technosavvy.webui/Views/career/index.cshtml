@model vmJD
@{
    // ViewData["Title"] = "referral-program";
}
<section class="page-section a-inner-head bg1 pt-5">
    <div class="container-fluid">
        <div class="row pt-4">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="css566-heading mb-3">
                    <h1> Career</h1>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <div class="index-links">
                    <ul>
                        <li><a asp-controller="home" asp-action="index" class="url-1"> Home </a></li>
                        <li>|</li>
                        <li>Career</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- // Page name section -->
<!-- FAQ page section -->
<section class="aboutjd33">
    <div class="container">
        <div class="row mt-4">
            @if (Model.JD != null && Model.JD.Body.IsNOT_NullorEmpty() && Model._UserId.IsNOT_NullorEmpty())
            {

                <div class="col-lg-12 col-md-12">
                    <div class="jdtitle55"> <h1>@Model.JD.Title  </h1>   <span class="refer-np7"> Ref No:@Model.JD.RefNo </span> </div>
                    <div class="jdbodydiv">
                        <h4>@Model.JD.Title </h4>
                        @Html.Raw(Model.JD.Body)
                    </div>

                    <div id="frmAck" class="confirm4-div mt-3">
                        <form asp-action="Acknowledge" asp-controller="Career" class="jdform23" id="msform" data-ajax="true" data-ajax-method="POST" data-ajax-update="#frmAck">
                            @Html.HiddenFor(x=>x.JD.id)
                            @Html.HiddenFor(x=>x._UserName)
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label ack-div121" for="flexCheckDefault">
                                I, @Model._UserName, acknowledge that I have read the job description.
                            </label>
                        </div>
                        <span> <input type="submit" class="css566-btn mt-3"  value="Acknowledge"></span>
                        </form>
                    </div>
                    <div class="note-msg"> You have been added to our confirmation list & now, you will be eligible for job application. </div>
                    <!----------------------------------------------------------->
                </div>
            }
            else
            {
                <div class="invalid-section">
                    Invalid Job Description Reference Code.
                </div>
            }

        </div>

    </div>
</section>
