@model vmBuy
@{
    ViewData["Title"] = "TechnoApp Buy Summary: Your Quick View to Crypto Investments";
}

@section Header {
    <meta name="description" content="Get a clear and concise overview of your crypto investments with TechnoApp  Buy Summary." />
}
<section class="section-upload bg2">
    <div class="container">
        <div class="wallet-userdiv33">
            <span class="market-title-h2 headcss33">
                <span>Buy Crypto </span>
            </span>
        </div>
        <div class="row">
            <div class="col-md-8 col-12">
                <div class="css77-buyc-outer">
                    <div id="deposit-tabdiv" class="css77-buyc-div mt-4 mb-4">
                        <form novalidate class="was-validated" autocomplete="off" asp-action="Confirm" asp-controller="Buy" id="frmBuy" enctype="multipart/form-data">
                                <div id="sMsg" asp-validation-summary=All class="text-danger"></div>
                                <div id="Msg" class="text-danger"></div>
                            @Html.HiddenFor(x=>x.selectedCoin)
                            @Html.HiddenFor(x=>x.PaySelectedCoin)
                            @Html.HiddenFor(x=>x.PayAmount)
                            @Html.HiddenFor(x=>x.BuyAmount)
                        <div id="msform" class="summarydiv">
                            <!---===================================================-->
                            <h5>Summary</h5>
                            <!---===================================================-->
                            <div class="css77-withdrawlS">
                                <div class="csssum-title55"> Buy</div>
                                <div class="csssum-detail55"> @(Model.BuyAmount.ToString("#,###.######")) @Model.Token.Code</div>
                            </div>
                            <!---===================================================-->
                            <div class="css77-withdrawlS">
                                <div class="csssum-title55">Pay With</div>
                                <div class="csssum-detail55">@(Model.PayAmount.ToString("#,###.######")) @Model.PayToken.Symbole  </div>
                            </div>
                            <!---===================================================-->

                            <div class="css77-withdrawlS">
                                <div class="csssum-title55">
                                    Rate <span class=" proper" tabindex="0"
                                               data-bs-placement="top" data-bs-toggle="popover" data-bs-trigger="hover focus"
                                               data-bs-content=" Please note that, this final buy quotation, which is subject to market conditions, it may not be the same. The price can be replrased." data-bs-original-title="" title="">  <i class="fa fa-info-circle css-1circle" aria-hidden="true"></i></span>
                                </div>
                                <div class="csssum-detail55">1 @Model.Token.Code  ≈ @(Model.ValueOfOne.ToString("#,###.######")) @Model.PayToken.Symbole </div>
                            </div>
                            <!---===================================================-->
                            <div class="css77-withdrawlS">
                                <div class="csssum-title55">Payment Method</div>
                                <div class="csssum-detail55">Fund Wallet</div>
                            </div>
                            <!---===================================================-->

                            <div class="w-100">
                                <span class="resend112  mt-4"> Confirm in <span id="countdowntimer">10</span> Seconds</span>
                                <span class="dflexdiv">
                                    <input class="d-dark action-button  mt-1" type="button" asp-controller="buy" asp-action="index" value="Previous">  
                                    <input class="d-orange action-button float-right" type="submit"  value="Confirm">
                                </span>
                            </div>

                            <!---===================================================-->

                        </div>
                  </form>
                    </div>

                </div>
            </div>


            <div class="col-md-4 col-12">
                @await Html.PartialAsync("partial/_RightFAQ")

            </div>

        </div>

        <!----------------------------------------------->
    </div>
</section>
